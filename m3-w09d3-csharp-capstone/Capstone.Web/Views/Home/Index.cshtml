@using Capstone.Web.Models
@model List<ParkModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>National Parks</h1>
<p>Welcome! Here, as you can see, is a list of National Parks that are located in the United States. If you would like more details on any of the parks, feel free to click the image or name of that park! Thank you for choosing the National Park Weather Service!</p>

@foreach (ParkModel park in Model)
{
<div class="inline-block">
    <div class="park"><a href="@Url.Action("Detail", "Home", park, null)"><img src="~/Content/@park.ImageLocation" /></a></div>
    <div class="descriptor">
        <a href="@Url.Action("Detail", "Home", park, null)">@park.ParkName</a>
        @park.ParkDescription
    </div>
</div>
}



